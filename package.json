{
  "name": "express-typescript-service-hexagonal",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/src/main.js",
    "start:user": "tsnd --respawn src/Gestion_users/server.ts",
    "start:pay": "tsnd --respawn src/Payments/server.ts",
    "start:noti": "tsnd --respawn src/Notificaciones/server.ts",
    "start:registro": "tsnd --respawn src/Registros/server.ts",
    "start:auth": "tsnd --respawn src/autentificacion/server.ts",
    "start:getall": "tsnd --respawn src/Gateways/server.ts",
    "start:all": "concurrently \"npm run start:user\" \"npm run start:pay\" \"npm run start:noti\" \"npm run start:registro\" \"npm run start:auth\"\"npm run start:getall\"",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test jest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "sonar": "sonar-scanner"
  },
  "keywords": [
    "typescript",
    "express"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/amqplib": "^0.10.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "mercadopago": "^2.0.15",
    "prettier": "^2.8.3",
    "rimraf": "^4.0.4",
    "sonarqube-scanner": "^3.0.1",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4",
    "http-proxy-middleware": "^2.0.6"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.606.0",
    "@types/signale": "^1.4.4",
    "@types/twilio": "^3.19.2",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1650.0",
    "axios": "^1.7.2",
    "body-parser": "^1.20.1",
    "clamav.js": "^0.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "mongoose": "^8.4.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.4",
    "nodemailer": "^6.9.16",
    "path": "^0.12.7",
    "signale": "^1.4.0",
    "uuid": "^10.0.0"
  }
}
